<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <EditText
        android:padding="5dp"
        style="@style/createuser_textbox_style"
        android:id="@+id/detBookAuthor"
        android:inputType="textAutoComplete"
        android:hint="Author Name"/>
    <EditText
        style="@style/createuser_textbox_style"
        android:id="@+id/detBookTitle"
        android:padding="5dp"
        android:inputType="textAutoComplete"
        android:hint="Book Title" />
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">

        <Spinner
            style="@style/createuser_textbox_style"
            android:layout_weight="3"
            android:padding="5dp"
            android:paddingRight="15dp"
            android:id="@+id/dspBookSubject"
            android:entries="@array/subject_list" />
        <Spinner
            style="@style/createuser_textbox_style"
            android:id="@+id/dspBookYear"
            android:padding="5dp"
            android:paddingLeft="15dp"
            android:layout_weight="7"
            android:entries="@array/pub_year" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:weightSum="10">
        <EditText
            style="@style/createuser_textbox_style"
            android:id="@+id/detBookcost"
            android:hint="Book Cost"
            android:padding="5dp"
            android:paddingRight="15dp"
            android:layout_weight="7"
            android:inputType="number"/>
        <EditText
            style="@style/createuser_textbox_style"
            android:id="@+id/detBookLocation"
            android:padding="5dp"
            android:paddingLeft="15dp"
            android:hint="Book Location"
            android:layout_weight="3"
            android:inputType="textAutoComplete"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <EditText
            style="@style/createuser_textbox_style"
            android:id="@+id/detDonor"
            android:layout_weight="5"
            android:paddingRight="15dp"
            android:hint="Donor Name" />
        <EditText
            style="@style/createuser_textbox_style"
            android:id="@+id/detDonorMobile"
            android:hint="Donor Mobile"
            android:paddingLeft="15dp"
            android:layout_weight="5"
            android:inputType="phone"
            android:autofillHints="9999999999" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dbuttonUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Update"
            android:background="@drawable/button_shape"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"


            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/dbuttonDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Delete"
            android:background="@drawable/button_shape"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"


            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/dbuttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Back"
            android:background="@drawable/button_shape"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"


            android:layout_marginTop="10dp"/>

    </LinearLayout>


</LinearLayout>
