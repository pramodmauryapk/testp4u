<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_book_fragment"
    style="@style/Relative_layout_style">
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/lay0"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:textSize="20sp"
            android:paddingBottom="20dp"
            android:id="@+id/txt1"
            android:text="@string/chose_one_of_them_to_search"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:id="@+id/lay1"
            android:layout_below="@+id/lay0"
            android:paddingRight="40dp"
            android:paddingBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/search_by_title"/>

            <Spinner
                android:id="@+id/sp_Book_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay2"
            android:layout_below="@id/lay1"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/search_by_author" />

            <Spinner
                android:id="@+id/sp_Book_Author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay3"
            android:layout_below="@id/lay2"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/search_by_category"/>

            <Spinner
                android:id="@+id/sp_Book_Subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay4"
            android:layout_below="@id/lay3"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/search_by_cost"/>

            <Spinner
                android:id="@+id/sp_Book_Cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:id="@+id/btn_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lay4"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_shape"
            android:text="@string/check"
            android:textColor="@color/colorwhite"/>



</RelativeLayout>
    <ListView
        android:id="@+id/view_list"
        android:layout_below="@id/search_book_fragment"
        style="@style/control_type"/>
</RelativeLayout>
