<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout

    android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content"
    android:id="@+id/search_book_fragment">

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/linear5"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Chose one of them to search "
        android:textColor="@color/colorRed"
        android:textSize="20sp" />
</LinearLayout>
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_below="@+id/linear5"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
               style="@style/createuser_control_style"
                android:layout_weight="5"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Search By Name    "/>

            <Spinner
                android:id="@+id/sp_Book_Name"
                android:layout_weight="5"
                style="@style/createuser_textbox_style" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_below="@+id/linear1"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:layout_gravity="center_vertical"
                style="@style/createuser_control_style"
                android:layout_weight="5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/search_by_author" />

            <Spinner
                android:id="@+id/sp_Book_Author"
                android:layout_weight="5"
                style="@style/createuser_textbox_style"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_below="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:paddingBottom="10dp">

            <TextView
                style="@style/createuser_control_style"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/search_by_subject"/>

            <Spinner
                android:id="@+id/sp_Book_Subject"
                android:layout_weight="5"
                style="@style/createuser_textbox_style" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear4"
            android:layout_below="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:paddingBottom="10dp" >

            <TextView
                style="@style/createuser_control_style"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/search_by_cost"/>

            <Spinner
                android:id="@+id/sp_Book_Cost"
                android:layout_weight="5"
                style="@style/createuser_textbox_style" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check"
            android:background="@drawable/button_shape"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"
            android:layout_below="@+id/linear4"
            android:id="@+id/btn_check"
            android:layout_gravity="center" />

</RelativeLayout>

    <ListView
        android:id="@+id/view_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_book_fragment" />

</RelativeLayout>
