<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/layout_padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:fillViewport="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Update Password"
                android:id="@+id/tv_forgotpassword"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tv_passwordupdateinstruction"
                android:id="@+id/tv_passwordreset"
                android:layout_below="@+id/tv_forgotpassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorRed"
                android:textAlignment="center"/>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_oldpass"
                android:layout_below="@+id/tv_passwordreset"
                android:layout_marginTop="20dp"
                android:hint="Old Password"
                style="@style/createuser_textbox_style" />
            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_newpass"
                android:hint="New Password"
                android:layout_below="@+id/et_oldpass"
                android:layout_marginTop="20dp"
                style="@style/createuser_textbox_style"/>

            <Button
                android:text="Save"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_save"
                android:gravity="center"
                android:layout_below="@+id/et_newpass"
                style="@style/createuser_control_style"
                android:background="@drawable/button_shape"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"/>

            <Button
               style="@style/createuser_control_style"
                android:text="Back"
                android:id="@+id/btn_back"
                android:gravity="center"
                android:layout_below="@+id/btn_save"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_reset"
                android:layout_below="@+id/btn_back"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:visibility="gone"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
