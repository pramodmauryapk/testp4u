<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:text="@string/bookidd"
            android:id="@+id/tvbookidd"
            android:textSize="12sp"
            android:layout_weight="0"
            android:textAlignment="viewStart"
            android:textColor="@color/colorblack"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:text="Let Us C"
            android:textSize="12sp"
            android:id="@+id/textView_BookTitle"
            android:layout_weight="10"
            android:textAlignment="viewStart"
            android:textColor="@color/colorblack"
           android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:text="Year"
            android:textSize="12sp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorblack"
            android:id="@+id/textView_BookYear"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">
    <TextView
        android:text="Yashwant Kanitkar"
        android:textColor="@color/colorblack"
        android:textSize="12sp"
        android:textAlignment="viewStart"
        android:id="@+id/textView_Book_Author"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
        <TextView
            android:text="Rs-"
            android:textSize="12sp"
            android:textColor="@color/colorblack"
            android:id="@+id/textView_currency"
            android:layout_weight="0"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TextView
            android:text="100"
            android:textSize="12sp"
            android:textColor="@color/colorblack"
            android:id="@+id/textView_Book_Cost"
            android:layout_weight="0"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </LinearLayout>

</LinearLayout>