<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/recycler_item_margin_bottom"
        android:layout_marginLeft="@dimen/recycler_item_margin"
        android:layout_marginRight="@dimen/recycler_item_margin"
        android:layout_marginTop="@dimen/recycler_item_margin_top"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_name_tv"
                android:layout_margin="@dimen/_8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Name"
                android:textColor="#222"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/txtsubject"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/_8dp"
                android:layout_height="wrap_content"
                android:text="School Address"
                android:textColor="#888"
                android:textStyle="italic"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_8dp"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/item_princi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toStartOf="@+id/item_princi_mobile"
                    android:text="Princi-"
                    android:textColor="#222" />

                <TextView
                    android:id="@+id/item_princi_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Mobile"
                    android:textColor="#222" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_8dp"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/item_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                    android:layout_toStartOf="@+id/item_trend_flag"
                    android:text="Students-"
                    android:textColor="#222" />

                <TextView
                    android:id="@+id/item_trend_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Teachers-"
                    android:textColor="#222" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_8dp"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/item_gross"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Medium"
                    android:textColor="@color/colorRed" />
                <TextView
                    android:id="@+id/item_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stb-Year"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorRed" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>