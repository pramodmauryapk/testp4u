<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorwhite"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorwhite">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_marginTop="-30dp"
            android:layout_height="200dp"
            android:background="@color/transparent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/logowithtitle"
                android:contentDescription="@string/parvarish_knowledge_center" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="-80dp"
            android:background="@drawable/waves"
            android:contentDescription="@string/parvarish_knowledge_center" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Enter Festival &amp; Select Date"
            android:textSize="20sp" />



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_service"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_festival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Festival or Reason"
                android:inputType="text"
                android:maxLines="1"
                tools:ignore="TooDeepLayout" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tv_mobile"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose from Calender"
                android:inputType="date"
                android:maxLines="1"
                tools:ignore="TooDeepLayout" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnpost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_shape"
            android:text="@string/post"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="94dp" />


    </LinearLayout>
</ScrollView>