<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"

    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
    android:weightSum="10"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="9"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:text="Let Us C"
                android:textSize="16sp"
                android:id="@+id/textView_BookTitle"
                android:layout_weight="10"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                android:textColor="@color/colorblack"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <TextView
                android:text="Year"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorblack"
                android:id="@+id/textView_BookYear"
                android:layout_weight="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <TextView
                android:text="@string/bookidd"
                android:id="@+id/tvbookidd"
                android:textSize="12sp"
                android:layout_weight="0"
                android:textAlignment="viewStart"
                android:textColor="@color/colorblack"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:text="@string/yashwant_kanitkar"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="italic"
                android:textAlignment="viewStart"
                android:id="@+id/textView_Book_Author"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/textView_currency"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:text="@string/rupee"
                android:textAlignment="viewEnd"
                android:textColor="@color/grey"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content" />
            <TextView
                android:text="@string/_100"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:id="@+id/textView_Book_Cost"
                android:layout_weight="0"
                android:textAlignment="viewEnd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_chevron_right_black_24dp"
        android:id="@+id/nextbutton"/>
</LinearLayout>