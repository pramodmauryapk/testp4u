<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/layout_padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView"
                android:src="@drawable/logo"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Update Password"
                android:id="@+id/tv_forgotpassword"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:textColor="@color/colorRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tv_passwordupdateinstruction"
                android:id="@+id/tv_passwordreset"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorRed"
                android:textAlignment="center"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/tf1"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_oldpass"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Old Password"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:id="@+id/tf2"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_newpass"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"/>
            </com.google.android.material.textfield.TextInputLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_height="wrap_content">
            <Button
                android:text="Save"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_save"
                android:gravity="center"
                android:layout_weight="5"
                style="@style/createuser_control_style"
                android:background="@drawable/button_shape"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"/>

            <Button
               style="@style/createuser_control_style"
                android:text="Back"
                android:id="@+id/btn_back"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:textColor="@color/colorwhite"
                android:textStyle="bold"/>
</LinearLayout>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar_reset"
                android:layout_marginTop="20dp"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
