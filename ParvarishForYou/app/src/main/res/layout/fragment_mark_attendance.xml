<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/_8dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9"
        android:id="@+id/linearLayout0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:id="@+id/linearLayout1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/tv_class"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@color/colorblack"/>

        <Spinner
            android:id="@+id/spn_class"
            android:background="@drawable/bg_edittext_focused"
            android:entries="@array/Class"
            android:padding="@dimen/_8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tv_section"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorblack"/>

        <Spinner
            android:id="@+id/spn_section"
            android:padding="@dimen/_8dp"
            android:background="@drawable/bg_edittext_focused"
            android:entries="@array/Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:id="@+id/linearLayout3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Date"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorblack"/>

        <EditText
            android:id="@+id/et_date"
            android:padding="9dp"
            android:background="@drawable/bg_edittext_focused"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_below="@+id/linearLayout0"
        android:id="@+id/lin1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:layout_weight="4"
            android:id="@+id/tv_userrole"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@color/colorblack"
            android:layout_height="wrap_content"
            android:text="Adm No"
            tools:ignore="RtlCompat" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/name"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:textStyle="bold"
            android:textColor="@color/colorblack"
            android:id="@+id/tv_username"
            android:textAlignment="viewStart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="4"
            android:text="Mark"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:textColor="@color/colorblack"
            android:id="@+id/checkbox1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin1"
        android:orientation="vertical">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lv_studentlist"
        android:background="@color/white"
        android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_submitattendence"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/circle"
            android:text="@string/btn_saveattendance"
            android:textColor="@color/colorwhite"
            android:src="@drawable/ic_menu_send"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</RelativeLayout>
