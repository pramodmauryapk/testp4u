<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.OTPConfirmation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/message"
            android:contentDescription="@string/parvarish_knowledge_center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/waiting_to_automatically_detect_an_n_sms_sent_to_your_mobile_number"
            android:textColor="@color/grey1"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:textSize="16sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/_91"
                android:padding="4dp"
                android:textColor="@color/grey1"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/minus"
                android:textColor="@color/grey1"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/otp_mobile"
                android:padding="4dp"
                android:textColor="@color/grey1"
                android:textStyle="bold"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:contentDescription="@string/parvarish_knowledge_center"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/pencil"
                android:id="@+id/edit_mobile"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invalid_otp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:id="@+id/invalid_otp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:padding="4dp"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorLink="@color/colorPrimary"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:cursorVisible="false"
                android:id="@+id/otp_pin_1"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:padding="4dp"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorLink="@color/colorPrimary"
                android:inputType="phone"
                android:maxLength="1"
                android:cursorVisible="false"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/otp_pin_2"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:padding="4dp"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorLink="@color/colorPrimary"
                android:inputType="phone"
                android:maxLength="1"
                android:cursorVisible="false"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:textSize="24sp"
                android:id="@+id/otp_pin_3"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:padding="4dp"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorLink="@color/colorPrimary"
                android:cursorVisible="false"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/otp_pin_4"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:padding="4dp"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorLink="@color/colorPrimary"
                android:cursorVisible="false"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/otp_pin_5"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:padding="4dp"
                android:textColorHighlight="@color/colorPrimary"
                android:textColorLink="@color/colorPrimary"
                android:cursorVisible="false"
                android:inputType="phone"
                android:maxLength="1"
                android:textSize="24sp"
                android:background="@null"
                android:gravity="center"
                android:drawablePadding="6dp"
                android:drawableBottom="@drawable/line"
                android:id="@+id/otp_pin_6"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/didn_t_receieve_the_code"
                android:textColor="@color/grey1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_code"
                android:textColor="@color/colorRed"
                android:gravity="center"
                android:id="@+id/resend_otp"
                android:layout_gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/main_color"
        android:layout_gravity="bottom"
        app:cardCornerRadius="0dp"
        android:id="@+id/verify_card">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorRed"
            android:text="@string/verify"
            android:id="@+id/verify_otp"
            android:textColor="@color/white"
            android:enabled="false"
            android:textSize="16sp"
            android:padding="16dp"/>
    </androidx.cardview.widget.CardView>
</FrameLayout>
