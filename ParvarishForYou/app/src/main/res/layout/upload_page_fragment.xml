<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".galary.UploadActivity"
    android:background="@color/colorwhite"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorwhite">



    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Enter Article Details"
        android:textSize="20sp" />


    <Spinner
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:entries="@array/PAGES"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:padding="5dp"
        android:id="@+id/sppagelist"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_edittext_focused"
        android:layout_height="wrap_content">

    </Spinner>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:id="@+id/tf1"

        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameEditText"
            android:hint="Article Tittle"
            android:maxLines="1"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/tf2"

        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/descriptionEditText"
            android:hint="@string/description"
            android:layout_width="match_parent"
            android:layout_height="160sp"
            style="@style/createuser_textbox_style"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|start"
            android:background="@drawable/bg_edittext"
            android:maxLines="10"
            android:scrollbars="vertical"

            android:inputType="textMultiLine"
            android:importantForAutofill="no" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/chosenImageView"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/placeholder"
        android:layout_height="200dp"
        android:contentDescription="@string/todo" />


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_choose_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:background="@drawable/button_shape"
            android:text="@string/choose_image"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/button_shape"
            android:textColor="@color/white"
            android:text="@string/upload"
            tools:ignore="ButtonStyle" />


    </LinearLayout>

</LinearLayout>
</ScrollView>