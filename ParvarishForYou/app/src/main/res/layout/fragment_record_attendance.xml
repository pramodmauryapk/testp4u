<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/tv_class"
        android:layout_weight="2"
        android:textSize="15sp"
        android:textColor="@color/colorblack"/>

        <Spinner
            android:id="@+id/spn_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tv_section"
            android:layout_weight="2"
            android:textSize="15sp"
            android:textColor="@color/colorblack"/>

        <Spinner
            android:id="@+id/spn_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/tv_subject"
            android:layout_weight="2"
            android:textSize="15sp"
            android:textColor="@color/colorblack"/>

        <Spinner
            android:id="@+id/spn_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
          />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout3"
        android:orientation="vertical">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/lv_studentlist"
        android:background="@color/white"
        android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btn_submitattendence"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/circle"
            android:text="@string/btn_saveattendance"
            android:textColor="@color/colorwhite"
            android:src="@drawable/ic_menu_send"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</RelativeLayout>
