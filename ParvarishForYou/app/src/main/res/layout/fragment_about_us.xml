<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/about_us_fragment"
    style="@style/Relative_layout_style">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lay0"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:textSize="20sp"
            android:id="@+id/txt1"
            android:text="About Us"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/image"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/description"
            style="@style/about_description"
            android:text="@string/about_page_description1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_page_description2"
            style="@style/about_description"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:textSize="20sp"
            android:id="@+id/txt2"
            android:text="Our objective"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/about_description"
            android:text="@string/about_page_description3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:textSize="20sp"
            android:id="@+id/txt3"
            android:text="Our Vision"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/about_description"
            android:text="@string/about_page_description4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:textSize="20sp"
            android:id="@+id/txt4"
            android:text="Our Mission"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/about_description"
            android:text="@string/about_page_description5"/>
    </LinearLayout>
</ScrollView>




