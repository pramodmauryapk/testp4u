<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_createstuname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tv_studentname"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/et_studentname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_createstuname"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="5dp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tv_classname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_studentname"
                android:text="@string/tv_class"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/et_classname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_classname"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="5dp"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tv_sectionname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_classname"
                android:text="@string/tv_section"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/et_sectionname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_sectionname"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="5dp"
                android:maxLines="1"/>

            <Button
                android:id="@+id/btn_addstudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_sectionname"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_shape"
                android:text="@string/btn_addstudent"
                android:textColor="@color/colorwhite"/>

            <Button
                android:id="@+id/btn_deletestudent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_addstudent"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_shape"
                android:text="@string/btn_deletestudent"
                android:textColor="@color/colorwhite"/>

            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_deletestudent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
