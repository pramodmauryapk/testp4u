<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".login.UserRegistration"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/top_curve"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="-50dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginRight="-50dp"
        android:src="@drawable/top_shape"
        android:contentDescription="@string/parvarish_knowledge_center"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registration"
                    android:id="@+id/registration_title"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/grey"
                    android:layout_gravity="center_horizontal"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:paddingTop="8dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="10"
                                android:id="@+id/lin0"
                                android:orientation="horizontal"
                                android:baselineAligned="false"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/lin2"
                                    android:orientation="vertical"
                                    android:layout_weight="3"
                                    android:baselineAligned="false">
                                    <com.google.android.material.textfield.TextInputLayout
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        android:layout_width="match_parent"
                                        android:layout_margin="5dp"
                                        android:id="@+id/tv_createusername"
                                        android:layout_height="wrap_content">
                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/et_fullname"
                                            android:hint="@string/username"
                                            android:maxLines="1"
                                            android:inputType="textPersonName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            tools:ignore="TooDeepLayout" />
                                    </com.google.android.material.textfield.TextInputLayout>

                                    <com.google.android.material.textfield.TextInputLayout
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                        android:layout_width="match_parent"
                                        android:layout_margin="5dp"
                                        android:id="@+id/tv_createemail"
                                        android:layout_height="wrap_content">
                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/et_createemail"
                                            android:hint="@string/email"
                                            android:maxLines="1"
                                            android:inputType="textEmailAddress"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content" />

                                    </com.google.android.material.textfield.TextInputLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/lin1"
                                    android:orientation="vertical"
                                    android:layout_weight="7"
                                    android:baselineAligned="false">
                                    <ImageView
                                        android:id="@+id/imgView"
                                        android:contentDescription="@string/parvarish_knowledge_center"
                                        android:layout_gravity="center_horizontal"
                                        app:srcCompat="@drawable/ic_file_upload_black_24dp"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp" />
                                    <Button
                                        android:id="@+id/btnChoose"
                                        android:text="@string/choose"
                                        android:onClick="chooseimage"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lin3"
                                android:layout_below="@+id/lin0"
                                android:orientation="horizontal"
                                android:weightSum="10"
                                android:baselineAligned="false">

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_margin="5dp"
                                    android:layout_weight="4"
                                    android:id="@+id/tv_createmobile"

                                    android:layout_height="wrap_content">
                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_createmobile"
                                        android:hint="@string/mobile_number"
                                        android:maxLines="1"
                                        android:inputType="phone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_margin="5dp"
                                    android:layout_weight="6"
                                    android:hint="@string/role"
                                    android:id="@+id/tv_role"
                                    android:layout_height="wrap_content">
                                    <Spinner
                                        android:id="@+id/sp_role"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:entries="@array/role_array" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_below="@+id/lin3"
                                android:id="@+id/tv_createpassword"

                                android:layout_height="wrap_content">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_createpassword"
                                    android:hint="@string/password"
                                    android:maxLines="1"
                                    android:inputType="textPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_below="@+id/tv_createpassword"
                                android:id="@+id/tv_comfirmpassword"
                                android:layout_height="wrap_content">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_confirmpassword"
                                    android:hint="@string/confirm_password"
                                    android:maxLines="1"
                                    android:inputType="textPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_below="@+id/tv_comfirmpassword"
                                android:id="@+id/tv_address"
                                android:layout_height="wrap_content">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_address"
                                    android:hint="@string/address"
                                    android:maxLines="1"
                                    android:inputType="textPostalAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_margin="5dp"
                                android:layout_below="@+id/tv_address"
                                android:id="@+id/tv_identity"
                                android:layout_height="wrap_content">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_identity"
                                    android:hint="@string/aadhar_id_voter_id"
                                    android:maxLines="1"
                                    android:inputType="textPersonName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />
                            </com.google.android.material.textfield.TextInputLayout>



                            <ProgressBar
                                android:id="@+id/pb"
                                style="?android:attr/progressBarStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/lin3"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"/>


                        </RelativeLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:id="@+id/register_card"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="8dp"
                            android:layout_gravity="center_horizontal"
                            app:cardBackgroundColor="@color/main_color">
                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/register"
                                android:textSize="16sp"
                                android:onClick="registerButton"
                                android:id="@+id/register_button"
                                android:textStyle="bold"
                                android:ems="15"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:background="@color/colorRed"
                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/already_have_account_text"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/already_have_account"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login"
                        android:textStyle="bold"
                        android:textColor="@color/colorRed"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:onClick="login"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>