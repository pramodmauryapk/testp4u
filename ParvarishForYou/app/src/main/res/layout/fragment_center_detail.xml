<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite">

   <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
       android:layout_margin="3dp"

        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">



            <com.p4u.parvarish.gallary.TouchImageView
                android:id="@+id/teacherDetailImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:contentDescription="@string/parvarish_knowledge_center"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />

            <LinearLayout
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/nameDetailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text="@string/user_name" />


                <TextView
                    android:id="@+id/tviewmobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:minLines="1"
                    android:text="@string/teacher_mobile" />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/dimen_20dp"
                    android:layout_marginTop="-30dp"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_call"
                    android:id="@+id/callbtn"
                    android:contentDescription="@string/parvarish_knowledge_center" />
                    <TextView
                        android:id="@+id/tviewaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:textStyle="italic"
                        android:text="@string/teacher_address" />



            </LinearLayout>
       </LinearLayout>
   </androidx.cardview.widget.CardView>




</ScrollView>
